import { OnChanges, SimpleChanges } from '@angular/core';
import { NgxScrollTopCoreService } from './ngx-scrolltop.core.service';
import { NgxScrollTopMode, NgxScrollTopPosition, NgxScrollTopTheme } from './ngx-scrolltop.interface';
export declare class NgxScrollTopComponent implements OnChanges {
    private core;
    backgroundColor: string;
    symbolColor: string;
    size: number;
    symbol: string;
    position: NgxScrollTopPosition;
    theme: NgxScrollTopTheme;
    mode: NgxScrollTopMode;
    show: boolean;
    onWindowScroll(): void;
    ngOnChanges(changes: SimpleChanges): void;
    constructor(core: NgxScrollTopCoreService);
    scrollToTop(): void;
}
